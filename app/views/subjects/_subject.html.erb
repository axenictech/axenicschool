<% unless flash[:notice].nil? %>
    <div align="center" class="alert alert-success" style="width:50%"> <%= flash[:notice] %> </div>
  <% end %>
 <div class="add_sub",style="margin-top:20px">
     <%= link_to 'Add Normal Subjects',new_batch_subject_path(@batch),remote:true%>
  </div>

<% if @subjects.empty? %>
 <h4 align="center">No Record Found </h4>
   <% else %>
<table align="center" class="table table-hover" style="width:800px">
<ul id="category-list" >
<tbody>
<thead>
  <tr class="tr-head">
      <th>Normal Subjects</th>
      <th colspan="3"></th>
  </tr>
</thead>
  <tbody class="product-index">
      <% @subjects.each do |subject| %>
        <tr>
          <td><%= subject.name %></td>
          <td><%= subject.code %></td>
        <!-- link to edit -->
          <td><%= link_to 'edit',edit_batch_subject_path(subject.batch,subject),remote: true%></td>
        <!-- link to delete -->
          <td><%= link_to 'delete',[subject.batch,subject],remote: true,method: :delete,data:{confirm:'Are you sure want to delete?'}%></td>
        </tr>
      <% end %>   
    </tbody>
  </table>
<%end%><br/><br/>
 <%=render 'elective_groups/elective_group'%>