<div id="content-header">
  <h1>Courses</h1>
  <h3>Show</h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png",:border => 0), courses_path %>
  </div>
  <div><%= image_tag("underline.jpg",width: "100%")%></div>
</div>
<div id="inner-tab-menu">
  <ul>
    <li><%= link_to 'New', new_course_batch_path(@course) %> </li>
    <li style="width:150px" ><%= link_to 'Grouped Batches', courses_grouped_batches_path(@course) %> </li>
  </ul>
</div>

<div id="page-yield">
  
  <div class="box">
   <% unless flash[:notice].nil? %>
    <div align="center" class="alert alert-success"> <%= flash[:notice] %> </div>
  <% end %>
        <div class="bread_crumb">
        <%= link_to 'Courses', courses_path %> &raquo;
        <%= @course.course_name %>
        </div>
<% if @batches.empty? %>
 <h4 align="center">No Record Found </h4>
   <% else %>
<table align="center" class="table table-hover table-bordered" style="width:800px">
<ul id="category-list">
<tbody>
<thead>
	<tr class="tr-head"><th colspan="3">Batch</th>
		</tr>
</thead>
		
<% @batches.each do |batch|%>
	
			<tr>
			<td class="col-2"><%=link_to batch.course.code+" - "+batch.name , batches_display_path(batch) %>
      </td>
			<td><%= link_to 'Edit', edit_batch_path(batch) %></td>
 			<td><%= link_to 'Delete',batch,
                    method: :delete, data: { confirm: "Are you sure to delete Batch #{batch.course.course_name+" "+batch.course.section_name+" - "+batch.name }?" } %></td>
			</tr>
<%end%>
</tbody>
</ul>
</table>
<%end%>
</div>
</div>


