<div id="content-header">
  <h1>User</h1>
  <h3>Edit User</h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png",:border => 0), :back  %>
  </div>
<div><%= image_tag("underline.jpg",width: "100%")%></div>
</div>

  <div id="inner-tab-menu">
    <ul><li style="width:150px"><%= link_to "Change Password", users_change_password_path(@user)%></li>
    </ul></div>
<div id="page-yield">
<div id="box">
<% unless flash[:edit].nil? %>
    <div align="center" class="alert alert-success" style="width:50%"> <%= flash[:edit] %> </div>
  <% end %>
  <%= form_for @user do |f| %>
<% if @user.errors.any? %>
    <div class="alert alert-danger">
    <h2>Errors prohibited to being saved:</h2>
    <ul><% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %></ul>
    </div>
  <% end %>
    <table align="center" class="table" style="width:500px">
       <tbody>
            <tr>
              <td class="col-2"><%= f.label :username %></td>
              <td class="col-2"><%= f.text_field :username %></td></tr>
              <tr>
              <td class="col-2"><%= f.label :first_name %></td>
              <td class="col-2"><%= f.text_field :first_name %></td></tr>
              <tr>
              <td class="col-2"><%= f.label :last_name %></td>
              <td class="col-2"><%= f.text_field :last_name %></td></tr>
              <tr>
              <td class="col-2"><%= f.label :email %></td>
              <td class="col-2"><%= f.text_field :email%></td></tr>
              <tr>
              <td colspan="2"><%= f.submit "Update",class: "btn btn-primary" %></td></tr>
        </tbody>
    </table> 

  <% end  %>
</div>
</div>