  <div class="box col-md-3">
    <div class="box-inner2">
      <div class="box-header well" data-original-title="">
        <h2><%= link_to "Teacher Timetable", '/time_tables/teachers_timetable' %></h2> 
      </div>
      <div class="box-content">
