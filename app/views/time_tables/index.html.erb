<div class="row">
  <div class="box col-md-1"></div>
  <div class="box col-md-3">
    <div class="box-inner2">
      <div class="box-header well" data-original-title="">
        <h2><%= link_to "View Timetables", '/time_tables/new'%></h2>
      </div>
      <div class="box-content">
