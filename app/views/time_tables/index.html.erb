<% if can? :create, @timetable %>
<div class="row">
  <div class="box col-md-1"></div>
  <div class="box col-md-3">
    <div class="box-inner2">
      <div class="box-header well" data-original-title="">
        <h2><%= link_to "Create weekdays",'/weekdays'%></h2>
      </div>
      <div class="box-content">
      Create weekdays.
      </div>
    </div>
  </div>
  <div class="box col-md-3">
    <div class="box-inner2">
      <div class="box-header well" data-original-title="">
        <h2><%= link_to "Set class timings",'/class_timings' %>
        </h2>
      </div>
      <div class="box-content">
        Create timetable for all the classes.
      </div>
    </div>
  </div>
  <div class="box col-md-3">
    <div class="box-inner2">
      <div class="box-header well" data-original-title="">
        <h2><%= link_to " Work Allotment",'/time_tables/work_allotment' %></h2> 
      </div>
      <div class="box-content">
        Assign subjects to teachers.
      </div>
    </div>
  </div>
</div>
