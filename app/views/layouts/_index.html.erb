<div class="navbar navbar-default" role="navigation">
  <div class="navbar-inner">
      <button type="button" class="navbar-toggle pull-left animated flip">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">
      <% unless current_user.general_setting.image.blank? %>
        <%= image_tag(current_user.general_setting.image,class: "hidden-xs") %>
      <% end %>
        <span><%= current_user.institute_name%></span>
      </a>
    <div class="btn-group pull-right">
      <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">
        <i class="glyphicon glyphicon-user"></i>
          <span class="hidden-sm hidden-xs">
            <%= current_user.first_name+" "+current_user.last_name %>
          </span>
          <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        <li>
          <%= link_to "Profile (#{current_user.role})", edit_user_registration_path %>
        </li>
        <li class="divider"></li>
        <li><%= link_to 'Sign Out',destroy_user_session_path, method: :delete %>
        </li>
      </ul>
    </div>
    
  </div>
</div>
<div class="ch-container">
  <div class="row">  
  <!-- left menu starts -->
  <% if current_user.role == 'Admin' %>
      <%= render 'layouts/menu1' %>
  <% elsif current_user.role == 'Employee' %>
      <%= render 'layouts/menu2' %>
  <% else %>
      <%= render 'layouts/menu3' %>
  <% end %>

      <div id="content" class="col-lg-10 col-sm-10">
        <%= yield %>
      </div>
    </div>
  <hr>
  <footer class="row">
    <p class="col-md-9 col-sm-9 col-xs-12 copyright">&copy; <a href="#" target="_blank">Axenic School</a> 2014 - 2015</p>
    <p class="col-md-3 col-sm-3 col-xs-12 powered-by">Powered by: <a
            href="#">Axenic Technologies</a></p>
  </footer>

</div>