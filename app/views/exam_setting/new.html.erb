<div id="content-header">
  <h1>Class Designations</h1>
  <h3>Manage Class Designations</h3>
  <div id="app-back-button">
      <%= link_to image_tag("buttons/back.png",:border => 0), :back  %>
  </div>
<div><%= image_tag("underline.jpg",width: "100%")%></div>
</div>


<div id="page-yield">

    <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

 <div class="box">
<div class="text-input-bg">
<%= form_for :course, url:{action:'select'},method: :get,remote:true, html:{id:"class_form"} do  |f| %>
