<div class="modal-dialog">
<div class="modal-content">
<div class="modal-header">
  <h3><%= "Edit Attendance for " %><span><%= @student.first_name%></span></h3>
</div>
<div class="modal-body">
<ul class="errors"></ul>
<%= form_for  @attendence,url:{:action=>'update_attendence',id:@attendence.id,subject_id:@subject_id,date:@today},method: :patch ,remote:true do |f|%>
   <div class="row">
    <div class="col-md-1"></div>
      <div class="col-md-6">
      <div class="form-group">
        <b>Reason for Absence:</b>
        <%= f.text_field :reason, class: 'form-control', placeholder: 'Reason for Absence'%>
      </div>
   
       <div class="form-group">
        <%= f.submit 'Update', class: "btn btn-success"%>
         
        <%= link_to 'Delete',delete_attendence_attendence_path(@attendence,subject_id:@subject_id,date:@today,batch:@attendence.batch.id),method: :delete, data:{confirm:"Are you sure to delete?"},class: "btn btn-danger"%>
        </div>
        </div>
        </div>
<% end %>

</div>
</div>
</div>

