<div class="row">
  <div class="col-sm-6">
   <div class="form-group">
     <div class="row">
      <div class="box col-md-12">
       <div class="box-inner">
        <div class="box-header well">
          <h2>Active Position</h2>
        </div>
        <div class="box-content">
         <table id="datatable" class="table table-striped table-bordered responsive">
           <thead>
             <tr>
               <th>Name</th>
               <th>Operation</th>
               
             </tr>

           </thead>
            <tr><td colspan="2"><%=positions1_not_found!%></td></tr>
           <tbody>
             <%@positions1.each do |c| %>
             <tr>
               <td class="col-3"><%=c.name%></td>
               <td class="center">
                <div class="label-success label label-default">
                  <i class="glyphicon glyphicon-edit icon-white"></i> 
                  <%= link_to 'Edit',edit_position_employee_path(c),remote: true,class: "a-action"%></div>

                  <div class="label-danger label label-default">
                    <i class="glyphicon glyphicon-trash icon-white"></i> 
                    <%= link_to 'Delete' ,destroy_position_employee_path(c),
                    method: :delete, data: { confirm: "Are you sure to delete #{c.name}?" },class: "a-action"%></div>
                  </td>

                </tr>
                <%end%>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
