  <tr>
     	 <td class="col-2"><b>First Name:</b>
       <span style="color:red">*</span></td>
          <td class="col-2"> <%=f.text_field :first_name%></td>
     </tr>

     <tr>
     	 <td class="col-2"><b>Middle Name:</b></td>
        <td class="col-2"><%=f.text_field :middle_name, :required=>false%></td>
     </tr>

     <tr>
     	 <td class="col-2"><b>Last Name:</b>
       <span style="color:red">*</span></td>
         <td class="col-2">  <%=f.text_field :last_name%></td>
     </tr>

     <tr>
        <td class="col-2"><b>Marital-Status:</b></td>
        <td class="col-2"><%= select :employee, :marital_status, [["single"], ["married"],["divorced"]], {}, {:onchange=>"hide_or_show_fields(this.value)"} %></td>
     
     </tr>

      <tr>
         <td class="col-2"><b>Father Name:</b></td>
           <td class="col-2"><%=f.text_field :father_name%></td>
     </tr>

      <tr>
         <td class="col-2"><b>Mother Name:</b></td>
           <td class="col-2"><%=f.text_field :mother_name%></td>
     </tr>

    
    <tr>
         <td class="col-2"><b>Blood Group:</b></td>
          <td class="col-2"><%=f.select :blood_group, ["A+", "A-", "B+", "B-", "O+", "O-", "AB+", "AB-"] %></td>
     </tr>

      <tr>
         <td class="col-2"><b>Nationality:</b></td>
          <td class="col-2"><%=f.select :country_id,Country.all.collect{|c| [c.name,c.id]}%></td>
     </tr>

    <tr>

     <td class="col-2"><b>Upload Photo:</b></td> 
      <td class="col-2"><%= f.file_field :photo_data %></td>
     </tr>
     
   <tr>
         <td class="col-2"><b>Date Of Birth:</b><span style="color:red">*</span></td>
          <td class="col-2"><%=f.date_field :date_of_birth%></td>
     </tr>