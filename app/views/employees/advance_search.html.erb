
<div id="content-header">
   <hr class="fancy-line"></hr>
  <h1><%= t('employee_search') %></h1>
  <h3><%= t('employee_details') %></h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png",:border => 0), "" %>
  </div>
 <div><%= image_tag("underline.jpg",width: "100%")%></div>
</div><br/><br/>



<div id="page-yield">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

<table align="center" class="table table-hover" style="width:500px">
<%= form_for :search, url:{action:'advance_search_emp'}, method: :get do |f|%>



     <tr>
       <td class="col-2"><%=f.label :employee_name%></td>
          <td class="col-2"><%=f.text_field :name%></td>
     </tr>

      <tr><td class="col-2"><%= f.label :gender%></td>
        <td class="col-2"><%=f.radio_button :gender,"All", :checked => "checked" %>All
          <%=f.radio_button :gender,"Male"%>Male
          <%=f.radio_button :gender,"Female"%>Female</td></tr>

     <tr>
       <td class="col-2"><%=f.label :Blood_Group%></td>
          <td class="col-2"><%=f.select :blood_group, ["A+", "A-", "B+", "B-", "O+", "O-", "AB+", "AB-"] ,prompt:true%></td>
     </tr>

     <tr>
      <td class="col-2"><%=f.label :"Marital-Status"%></td>
      <td class="col-2"><%=f.select :marital_status, ["single","married","divorced"],{prompt:true} %></td>
     
     </tr>
    
      <tr>
       <td class="col-2"><%=f.label :Nationality%></td>
          <td class="col-2"><%=f.select :country_id,Country.all.collect{|c| [c.name,c.id]},prompt:true%></td>
     </tr>
    
     <tr>
       <td class="col-2"><%=f.label :Category%></td>
         <td class="col-2"><%= f.select :employee_category_id, EmployeeCategory.all.collect {|b| [b.name,b.id]},prompt:true%></td>
     </tr>



     <tr>     
          <td class="col-2"><%=f.label :joining_date %><span class="necessary-field">*</span></td>
          <td class="col-2"><%=f.date_field :joining_date %></td>
     </tr>

    
       <tr>
       <td class="col-2"><%=f.label :Department%></td>
         <td class="col-2"><%= f.select :employee_department_id, EmployeeDepartment.all.collect {|b| [b.name,b.id]},prompt:true%></td>
     </tr>

     

      <tr>
       <td class="col-2"><%=f.label :Position%></td>
         <td class="col-2"><%= f.select :employee_position_id,EmployeePosition.all.collect {|b| [b.name,b.id]},prompt:true%></td>
     </tr>


      <tr>
       <td class="col-2"><%=f.label :Grade%></td>
         <td class="col-2"><%= f.select :employee_grade_id, EmployeeGrade.all.collect {|b| [b.name,b.id]},prompt:true%></td>
     </tr>

   
      <tr>
       <td class="col-2"><%=f.label :Date_of_Birth%></td>
          <td class="col-2"><%=f.date_field :date_of_birth%></td>
     </tr>

    <tr>
       <td class="col-2"><%=f.label :Status%>
         <td class="col-2"> Present<%= f.radio_button  "status","present", :checked => "checked" %>
          &nbsp;&nbsp;&nbsp;Former <%= f.radio_button  "status","Former"%>
            All <%= f.radio_button  "status","all"%></td>
       </td>
     </tr>
     
     <tr><td colspan="4"><%=f.submit "Search",class: "btn btn-success" %></td></tr>
     
        
  </div>
  
<%end%>
</table>
  </div>
 <div id="user_search"></div>
