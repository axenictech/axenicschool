        <td class="col-2"><%=f.text_field :office_city, :required=>false%></td>
     </tr>

     <tr>
       <td class="col-2"><%=f.label :state%></td>
         <td class="col-2">  <%=f.text_field :office_state%></td>
     </tr>


       <tr>
       <td class="col-2"><%=f.label :Country%></td>
          <td class="col-2"><%=f.select :office_country_id,Country.all.collect{|c| [c.name,c.id]}%></td>
     </tr>
      

      <tr>
       <td class="col-2"><%=f.label :"pin code"%></td>
