<div id="content-header">
   <hr class="fancy-line"></hr>
  <h1>Addmission</h1>
  <h3>Step 2 - Employee details<br />
  <small><font color="red">Fields Marked with * must be filled</font></small></h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png",:border => 0), "" %>
  </div>
 <div><%= image_tag("underline.jpg",width: "100%")%></div>
</div><br/><br/>

<div id="page-yield">
  <% unless flash[:notice8].nil? %>
    <p class="flash-msg"> <%= flash[:notice8] %> </p>
  <% end %>

<table align="center" class="table table-hover" style="width:1000px">
<%= form_for (@employee),url:{action: 'admission2_create',format: @employee.id},method: :patch do |f| %>
<div align="center">
    <% if @employee.errors.any? %>
        <div class="alert alert-danger" style="width:500px" >
          <h3>Error prohibited to from being saved:</h3>
          <ul>
           <% @employee.errors.full_messages.each do |msg| %>
              <li style="width:500px" align="left"><%= msg %></li>
            <% end %>
          </ul>
          <% end %>
      </div>
 </div>

    <tbody>

    <tr><td colspan="2" class="col-2" style="background-color:white">Home Address</span>
        <hr class="sub-heading"></hr>
      </td>
      </tr>

    <tr>  
         <td class="col-2"><%=f.label :line1%><span class="necessary-field">*</span></td>
          <td class="col-2"><%=f.text_field :home_address_line1%></td>
     </tr>
    
     <tr>
     	 <td class="col-2"><%=f.label :line2%><span class="necessary-field">*</span></td>
          <td class="col-2"> <%=f.text_field :home_address_line2%></td>
     </tr>

     <tr>
     	 <td class="col-2"><%=f.label :city%><span class="necessary-field">*</span></td>
        <td class="col-2"><%=f.text_field :home_city, :required=>false%></td>
     </tr>

     <tr>
     	 <td class="col-2"><%=f.label :state%><span class="necessary-field">*</span></td>
         <td class="col-2">  <%=f.text_field :home_state%></td>
     </tr>

      <tr>

       <tr>
