<div id="content-header">
  <h1>Exam Management</h1>
  <h3>Create Exam</h3>
  <div id="app-back-button">
 <%= link_to image_tag("buttons/back.png",:border => 0),:back %>
  </div>
  <div><%= image_tag("underline.jpg",width: "100%")%></div>  
</div>
<div id="inner-tab-menu">
  <ul>
    <li><%= link_to 'Previous Batch Exams', new_course_path(@course) %> </li>
  </ul>
</div>

<div id="page-yield">
<div class="box">

<div class="text-input-bg">
	<%= form_for :course, url:{action:'select'},method: :get,remote:true,html:{id: "exam_form"}  do |f| %>
	<%= f.label :select_course %>
  <%= f.select :id, Course.all.collect {|b| [b.course_name+" "+b.section_name,b.id]}, {prompt:true},{onchange:"$('#exam_form').submit();"}%>

<% end %>

</div><br /><br /><br/>
 
 </div></div>
