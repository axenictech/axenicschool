<div id="content-header">
  <h1>Donations</h1>
  <h3>Add new donation</h3>
    <div id="app-back-button">
  <%= link_to image_tag("buttons/back.png",:border => 0), :back %>
  </div>
  <div><%= image_tag("underline.jpg",width: "100%")%></div>
</div>

<div id="inner-tab-menu">
  <ul>
    <li><%= link_to 'Donors',finance_donors_path %> </li>

  </ul>
</div>

<div id="page-yield">

<%= form_for @donation, url:{action: 'create_donation'} do |f| %>
	<% if @donation.errors.any?%>
      <div class="alert alert-danger">
        <ul>
          <h3>Errors Prohibited: </h3>
          <% @donation.errors.full_messages.each do |msg| %>
          	<li style="width:500px"><%= msg%></li>
          <% end %>
        </ul> 
      </div>
  	<% end %>
<table class="table" style="width:500px" align="center">
<tbody>
		<tr>
			<td class="col-2"><%= f.label :donar_name%></td>
			<td class="col-2"><%= f.text_field :donor%></td>
		</tr>
		<tr>
			<td class="col-2"><%= f.label :description%></td>
			<td class="col-2"><%= f.text_field :description%></td>
		</tr>
		<tr>     
          <td class="col-2"><%=f.label :transaction_date %></td>
          <td class="col-2"><%=f.date_field :transaction_date,:value => Time.now.strftime('%Y-%m-%d'),:style=>"width:175px"%></td>
     	</tr>
		<tr>
			<td class="col-2"><%= f.label :amount%></td>
			<td class="col-2"><%= f.text_field :amount%></td>
		</tr>
		<tr>
			<td colspan="2"><%= f.submit 'Add',class: "btn btn-primary"%></td>
		</tr>
</tbody>
</table>
<%end%>
</div>
