<div>
  <ul class="breadcrumb">
    <li><%= link_to 'Home',home_dashboard_path %></li>
    <li><%= link_to 'Finance',finance_index_path %></li>
    <li><%= link_to 'Transction',finance_transactions_path %></li>
    <li><%= link_to 'Add income',finance_new_income_path %></li>
    <li><%= link_to 'View income',finance_view_income_path %></li>
    <li>Income list</li>
  </ul>
</div>
<div id="flash"><%= render 'layouts/messages'%></div>

<div class="row">
	<div class="col-md-12">
		<div class="pull-right">
    	<%= link_to 'Pdf Report',income_report_finance_index_path(start_date:@start_date,end_date:@end_date,format:"pdf"),class: "btn btn-primary-link btn-xs"%>
    	</div>
	</div>
</div>
<hr>
<div class="row">
  <div class="box col-md-12">
	  <div class="box-inner">
	    <div class="box-header well">
	      <h2>List of incomes</h2>
	    </div>

	    <div class="box-content">
		    <% unless @incomes.empty?%>
		      <table id="datatable" class="table table-striped table-bordered responsive">
		        <thead>
		          <tr>
		            <th>Name</th>
					<th>Description</th>
					<th>Amount</th>
					<th>Transaction Date</th>
					<th>Action</th>
		          </tr>
		        </thead>
		        <tbody>
		        <% @incomes.each do |income|%>
		        	<%if income.finance_transaction_category.is_income? %>
			          <tr>
			            <td><%= income.title%></td>
									<td><%= income.description%></td>
									<td><%= income.amount%></td>
									<td><%= income.transaction_date%></td>
			            <td class="center">
			              <div class="label-success label label-default">
			              <i class="glyphicon glyphicon-edit icon-white"></i> 
			              <%= link_to 'Edit',edit_income_finance_path(income), class: 'a-action'%></div>

			              <div class="label-danger label label-default">
			              <i class="glyphicon glyphicon-trash icon-white"></i> 
			              <%= link_to 'Delete',delete_income_finance_path(income),method: :delete, data:{confirm:"Are you sure to delete Income '#{income.title}'?"}, class: 'a-action'%>
			              </div>
			            </td>
			          </tr>
			        <%end%>  
		        <% end %>
		        </tbody>
		      </table>
		    <%else%>
					<center><h5>No discount found for this fee category</h5></center>
				<%end%>
	    </div>
	  </div>
  </div>
</div>