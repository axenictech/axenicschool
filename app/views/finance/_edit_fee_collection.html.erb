<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h3>Edit Fee Collection</h3>
    </div>
    <div class="modal-body">
      <ul class="errors"></ul>
      <%= form_for @collection,url:{action:'update_fee_collection',batch_id:@batch.id,id:@collection.id},method: :patch,remote: true do |f|%>
        <div class="row">
          <div class="col-md-1"></div>
          <div class="col-md-4"><b>Name :</b></div>
          <div class="col-md-7"><%= f.text_field :name,class: "form-control"%></div>
        </div><br/>
        <div class="row">
          <div class="col-md-1"></div>
          <div class="col-md-4"><b>Start Date :</b></div>
          <div class="col-md-7"><%= f.date_field :start_date,class: "form-control"%></div>
        </div><br/>
        <div class="row">
          <div class="col-md-1"></div>
          <div class="col-md-4"><b>End Date :</b></div>
          <div class="col-md-7"><%= f.date_field :end_date,class: "form-control"%></div>
        </div><br/>
        <div class="row">
          <div class="col-md-1"></div>
          <div class="col-md-4"><b>Due Date :</b></div>
          <div class="col-md-7"><%= f.date_field :due_date,class: "form-control"%></div>
        </div><hr/>
        <div class="row">
          <div class="col-md-12">
            <center>
              <%= f.submit 'Update', class: "btn btn-success"%>
              <%= link_to 'cancel', '#', class: "btn btn-default",data:{dismiss:"modal"}%>
            </center>
          </div>
        </div>
      <%end%>
    </div>    
  </div>
</div>