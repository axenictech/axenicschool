<div>
  <ul class="breadcrumb">
    <li><%= link_to 'Home',dashboard_home_index_path %></li>
    <li><%= link_to 'Finance',finance_index_path %></li>
    <li><%= link_to 'Donor List',donors_finance_index_path %></li>
    <li>Update donation</li>
  </ul>
</div>
<div id="flash"><%= render 'layouts/messages'%></div>
<div class="row">
  <div class="col-md-12">
    <div class="pull-right">
      <%= link_to 'Donors', donors_finance_index_path, class: "btn btn-primary-link btn-xs" %>
    </div>
  </div>
</div>
<div class="row">
  <div class="box col-md-8 col-md-offset-2">
    <div class="box-inner">
      <div class="box-header well">
        <h2>Update Donation </h2>
      </div>
      <div class="box-content">
      <%= form_for @donation, url:{action: 'update_donation',id:@donation.id},method: :patch do |f| %>
    <fieldset>
      <%= donation_errors!%>
      <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-5">
          <div class="form-group">
            <b>Donor Name:</b>
            <%= f.text_field :donor,:style =>"width: 300px",placeholder: "Name of the donor", class: "form-control"%>
          </div>
          <div class="form-group">
            <b>Description:</b>

            <%= f.text_field :description,:style =>"width: 300px", placeholder: "Description", class: "form-control"%>
          </div>
          <div class="form-group">
            <b>Amount:</b>
            <%= f.text_field :amount,:style =>"width: 300px", placeholder: "Amount",class: "form-control" %>
          </div>
          <div class="form-group">
            <b>Transction Date:</b>
            <%= f.date_field :transaction_date,:value => Time.now.strftime('%Y-%m-%d'),:style =>"width: 300px", class: "form-control"%>
          </div>
        </div>
      </div>
      <div>
        <center>
          <%= f.submit 'Update', class: "btn btn-success"%>
        </center>
      </div>
    </fieldset>        
  <% end %>
</div>
</div>
</div>
</div>

