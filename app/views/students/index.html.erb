<div>
  <ul class="breadcrumb">
    <li><%= link_to 'Home',dashboard_home_index_path %></li>
    <li>Student Details</li>
  </ul>
</div><div id="flash"><%= render 'layouts/messages'%></div>
<div class="row">
  <div class="col-md-12">
    <div class="pull-right">
      <%= link_to 'View All','students/view_all', class: "btn btn-primary-link btn-xs" %>
      <%= link_to 'Advanced Serach','students/advanced_search', class: "btn btn-primary-link btn-xs" %>
    </div>
  </div>
</div>
   <hr>
<div class="row">
  <div class="box col-md-12">
  <div class="box-inner">
    <div class="box-header well">
      <h2>Student Details</h2>
    </div>
  <div class="box-content" style="overflow-y: scroll; height:auto">
  <% if @students.empty? %>
 <h4 align="center">No Record Found </h4>
   <% else %>
      <table class="table table-striped table-bordered responsive">
        <thead>
       <tr>
        <th>Sr. No.</th>
        <th>Student Name</th>
        <th>Admission No.</th>
        <th></th>
      </tr>
    </thead>
  <tbody>  
      <% @students.each_with_index do |student,i| %>
        <tr>
          <td><%= i+1 %></td>
          <td><%= student.first_name+' '+student.last_name  %></td>
          <td><%= student.admission_no %></td>
          <% if student.status_description %>
          <td><%= link_to 'View Profile', archived_profile_student_path(student) %></td>
          <% else %>
          <td><%= link_to 'View Profile',profile_student_path(student) %></td>
          <% end %>
        </tr>      
      <% end %>     
   </tbody>
      </table>
    </div>
  </div>
  </div>
</div>
<% end %>