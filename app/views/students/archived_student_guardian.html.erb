<div>
  <ul class="breadcrumb">
    <li><%= link_to 'Home',dashboard_home_index_path %></li>
    <li><%= link_to 'Student Details',students_path %></li>
    <li><%= link_to 'Profile',archived_student_profile_student_path(@student)%></li>
    <li>Guardians</li>
  </ul>
</div><div id="flash"><%= render 'layouts/messages'%></div>
<div class="row">
  <div class="col-md-12">
    <div class="pull-right">
     <%= link_to "Student profile", archived_profile_student_path(@student),class: "btn btn-primary-link btn-xs"%>

   </div>
 </div>
</div>
<hr>
<div class="row">
  <div class="box-inner">
    <div class="box-content" >
      <fieldset>
        <div class="col-md-6">
          <h3><%= @student.first_name+" "+@student.last_name %></h3>
          <h4>Adm no : <%= @student.admission_no %></h4>
          <h4>Class : <%= @student.batch.course.course_name %></h4>
        </div>
        <div class="col-md-6">
         <ul>
          <h3>Parents/Guardian:</h3>
          <% @guards.each do |p| %>
          <li><a href="#guardian-details-id-<%= p.id %>"><%= p.first_name %> <%= p.last_name %></a> (<%= p.relation %>)</li>
          <% end %>
        </ul>
        <% @guards.each do |p| %> 
        <a name="guardian-details-id-<%= p.id %>"> </a></div>
      </fieldset>
    </div>
  </div>
</div>
<div id="new_profile_info_top">
  <div class="row">
    <div class="box col-md-12">
      <div class="box-inner">
        <div class="box-content">
          <table id="datatable" class="table table-striped table-bordered responsive">
           <tbody>
            <tr>
              <th> Name:</th>
              <td > <%= p.first_name %> <%= p.last_name %></td>      
            </tr>
            <tr>
             <th> Relation:</th>
             <td > <%= p.relation %></td>        
           </tr>
           <tr>
            <th>  DOB:</th>
            <td ><%= p.dob.strftime('%d %B, %Y') unless p.dob.nil? %></td>        
          </tr>
          <tr>
            <th> Email</th>
            <td > <%= p.email %></td>        
          </tr>

          <tr>
            <th> Phone 1:</th>
            <td > <%= p.office_phone1 %></td>        
          </tr>
          <tr>
            <th> Phone 2:</th>
            <td > <%= p.office_phone2 %></td>
          </tr>
          <tr>
            <th > Mobile:</th>
            <td > <%= p.mobile_phone %></td>
          </tr>
          <tr>
            <th > Address:</th>
            <td > <%= p.office_address_line1%>,<%= p.office_address_line2%></td>
          </tr>
          <tr>
            <th> Country</th> 
            <td ><%= p.country.name unless p.country.nil?%></td>
          </tr>
          <tr>
            <th> Income</th>
            <td > <%= p.income %></td>
          </tr>
          <tr>
            <th> Occupation</th>
            <td > <%= p.occupation %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <% end %>
  </div>
</div>
</div>
</div>