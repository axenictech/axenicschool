<div>
  <ul class="breadcrumb">
    <li><%= link_to 'Home',dashboard_home_index_path %></li>
    <li><%= link_to 'Placement',placement_exams_path %></li>
    <li>Create Exam</li>
  </ul>
</div>
Note:&nbsp;&nbsp;<font color="red">Fields marked with * must be filled</font>
<div id="flash"><%= render 'layouts/messages'%></div>
<div class="row">
  <div class="box col-md-12">
    <div class="box-inner">
      <div class="box-header well">
        <h2>Create Exam</h2>
      </div>
      <div class="box-content">
        <%= form_for :exam, url:{action:'insert_exam'},html:{id: "user_form"} do |f|%>
          <fieldset>
    
            <div class="row">
              <div class="col-sm-2"></div>
              <div class="col-sm-10">
                <div class="row">
                  <div class="col-sm-4 ">
                    <div class="form-group">
                      <b>Select Company:</b>
                      <span style="color:red">*</span>
                      <%= f.select :company_id,@company.collect { |c| [c.name, c.id] },{prompt:true},class: "form-control"%>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-4 ">
                    <div class="form-group">
                      <b>Number of Question:</b>
                      <span style="color:red">*</span>
                      <%= f.text_field :question_count,class: "form-control"%>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-4 ">
                    <div class="form-group">
                      <b>Times in Minutes:</b>
                      <span style="color:red">*</span>
                      <%= f.time_select :timeperiod, :discard_hour=> true,class: "form-control"%>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-4 ">
                    <div class="form-group">
                      <b>Start date:</b>
                      <span style="color:red">*</span>
                      <%= f.date_field :start_date,class: "form-control"%>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-4 ">
                    <div class="form-group">
                      <b>End date:</b>
                      <span style="color:red">*</span>
                      <%= f.date_field :end_date,class: "form-control"%>
                    </div>
                  </div>
                </div>
                <div class="technical"></div>
                <div class="row">
                  <div class="col-sm-4 ">
                    <div class="form-group">
                      <%= button_tag "Add Question",{onclick:"var a={type:$i=0};$.get('exam',a,function(response){});", :class => "btn btn-small btn-inverse", :type => "button"}%>
                    </div>
                  </div>
                </div>
              </div>  
            </div>  
            <div class="col-md-6 col-md-offset-5">           
            <%= f.submit 'Save', class: "btn btn-primary",style:"width:80px"%></div>
          </fieldset>
        <%end%>
      </div>
    </div>
  </div>
</div>