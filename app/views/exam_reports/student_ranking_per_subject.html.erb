<div id="content-header">
  <h1>Exam Reports</h1>
  <h3>Student Ranking Per Subject</h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png",:border => 0),:back %>
  </div>
<div><%= image_tag("underline.jpg",width: "100%")%></div>
</div>
<div id="page-yield">

  
  <div class="box">

  <div class="bread_crumb">
    <%= link_to 'Exams', '/exams' %> &raquo;
    <%= link_to 'Report Center', '/exam_reports/report_center' %> &raquo;
    Student Ranking Per Subject
  </div>
   <% unless flash[:notice].nil? %>
    <div class="alert alert-success" style="width:50%"> <%= flash[:notice] %> </div>
    <%end %>
<%= form_for :rank_report, :url=>{:action=>'rank_report_batch'},html:{id: 'form_rank_report_batch'},remote:true,method: :get do |f| %>
  
 <div class="label-field-pair">
  <%= f.label :select_batch %>
      <div class="text-input-bg">
      <%= f.select :batch_id, @batches.collect {|b| [b.course.course_name+" "+b.course.section_name+" - "+b.name,b.id]},{prompt:true},{onchange:"$('#form_rank_report_batch').submit();"}%>
      </div></div>
  <% end %>
      <div id="rank_report"><%= render 'rank_report_subject' %></div>
  </div>
</div> 