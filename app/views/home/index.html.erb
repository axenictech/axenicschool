<div class="intro-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="intro-message">
                    <h1>Axenic Aster</h1>
                    <h3>Try demo for free</h3>
                    <hr class="intro-divider">
                    <ul class="list-inline intro-social-buttons">
                        <li>
                         <%= link_to 'Sign-up for free', new_user_registration_path, class: "btn btn-default btn-lg"%>
                     </li>
                 </ul>
             </div>
         </div>
     </div>
 </div>
</div>
<div class="content-section-a">
    <div class="container">
        <div class="row">
